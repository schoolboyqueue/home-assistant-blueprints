# EditorConfig for validate-blueprint-go
# https://editorconfig.org

root = true

# Default settings for all files - 2 spaces
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Go files - tabs required by gofmt/gofumpt (Go standard)
[*.go]
indent_style = tabs
indent_size = 2
tab_width = 2

# Makefile - must use tabs (Make requirement)
[Makefile]
indent_style = tab
indent_size = 2

# Go module files - tabs as per Go convention
[go.mod]
indent_style = tab
indent_size = 2

[go.sum]
indent_style = tab
indent_size = 2

# Markdown files - preserve trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false
